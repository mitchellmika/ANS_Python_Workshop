# WITHOUT FUNCTIONS

car_mpg = 30
car_miles = 100000
car_age = 5
car_isWorking = True


if car_isWorking:
    multiplier = 1
else:
    multiplier = 0.3
carValue = multiplier * ((car_mpg * 1500) - (car_age * 2000)) / (car_miles * 0.00005)


car2_mpg = 40
car2_miles = 100000
car2_age = 5
car2_isWorking = True

if car2_isWorking:
    multiplier = 1
else:
    multiplier = 0.3
carValue2 = multiplier * ((car2_mpg * 1500) - (car2_age * 2000)) / (car2_miles * 0.00005)

car3_mpg = 30
car3_miles = 50000
car3_age = 5
car3_isWorking = True

if car3_isWorking:
    multiplier = 1
else:
    multiplier = 0.3
carValue3 = multiplier * ((car3_mpg * 1500) - (car3_age * 2000)) / (car3_miles * 0.00005)

car4_mpg = 30
car4_miles = 100000
car4_age = 5
car4_isWorking = False

if car4_isWorking:
    multiplier = 1
else:
    multiplier = 0.3
carValue4 = multiplier * ((car4_mpg * 1500) - (car4_age * 2000)) / (car4_miles * 0.00005)


print(f"Total value: {carValue + carValue2 + carValue3 + carValue4}")



# WITH FUNCTIONS

def CarValue(mpg, miles, age, isWorking):
    if isWorking:
        multiplier = 1
    else:
        multiplier = 0.3
    carValue = multiplier * ((mpg * 1500) - (age * 2000)) / (miles * 0.00005)
    
    return carValue


car_mpg = 30
car_miles = 100000
car_age = 5
car_isWorking = True
carValue = CarValue(car_mpg, car_miles, car_age, car_isWorking)

car2_mpg = 30
car2_miles = 100000
car2_age = 5
car2_isWorking = True
carValue2 = CarValue(car2_mpg, car2_miles, car2_age, car2_isWorking)

car3_mpg = 30
car3_miles = 100000
car3_age = 5
car3_isWorking = True
carValue3 = CarValue(car3_mpg, car3_miles, car3_age, car3_isWorking)

car4_mpg = 30
car4_miles = 100000
car4_age = 5
car4_isWorking = True
carValue4 = CarValue(car4_mpg, car4_miles, car4_age, car4_isWorking)

print(f"Total value: {carValue + carValue2 + carValue3 + carValue4}")
